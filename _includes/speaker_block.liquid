<div class="col-sm-3 pd-0">
  <div class="block-speaker">
    <div class="block-img overlay soft">
      <div class="background-img">
        <img src="{{ speaker.image }}" alt="{{ speaker.name }}" />
      </div>
      <div class="block-info-2">
        <p>
          <strong>{{ speaker.name }}</strong>
          <span>{{ speaker.designation }} </span>
        </p>
        <ul class="block-social">
          {% if speaker.twitter and speaker.twitter != "" %}
          <li>
            <a href="{{ speaker.twitter }}"><i class="fab fa-twitter"></i></a>
          </li>
          {% endif %} {% if speaker.linkedin and speaker.linkedin != "" %}
          <li>
            <a href="{{ speaker.linkedin }}"><i class="fab fa-linkedin"></i></a>
          </li>
          {% endif %} {% if speaker.website and speaker.website != "" %}
          <li>
            <a href="{{ speaker.website }}"><i class="fas fa-sitemap"></i></a>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
</div>
